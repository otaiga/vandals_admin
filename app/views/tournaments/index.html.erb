<div class="container">
  <div class="row">
    <div class="col-md-8 well">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Tournament Name</th>
              <th>Tournament Location</th>
              <th>Tournament Date</th>
              <th>Options</th>
            </tr>
          </thead>
          <tbody>
          	<% @tournaments.each do |t| %>
          	<tr>
              <td><%= t.name %></td>
              <td><%= t.tourn_location %></td>
              <td><%= date_output(t.tourn_date) %></td>
              <td><%= link_to 'view', tournament_path(t), class: 'btn btn-success' %> <%= link_to 'Edit', edit_tournament_path(t), class: 'btn btn-warning' %> <%= link_to 'Delete', tournament_path(t.id), method: :delete,  :confirm => "Are you sure you want to delete this Tournament?", class: 'btn btn-danger' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>



    </div>
  </div>
</div>