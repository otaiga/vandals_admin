<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
    	<%= form_for @gallery, html: { multipart: true }  do |f| %>
        <fieldset>
        <!-- Form Name -->
        <legend>Create New Gallery</legend>
        
        <div class="form-group">
          <%= f.label :tournament_id  %>
          <%= f.collection_select :tournament_id, Tournament.all, :id, :name, { :prompt => "Please Select a Tournament" }, { class: 'form-control' } %>
        </div>

            
        <div class="form-group">
			    <%= f.submit 'Submit', :class => 'btn btn-success' %>
			  </div>

          </fieldset>
        <% end %>
      </div>
     </div>
    </div>
